.search-box{
	width: 700rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 10rpx auto;
	}
	.search{
	display: inline-block;
	width: 600rpx;
	height: 80rpx;
	padding-left: 20rpx;
	background-color: #f3f3f3;
	font-size: 28rpx;
	border-radius: 10rpx;
	}
	.text{
	font-size: 28rpx;
	display: inline-block;
	}


	/* 标题部分 */
.read-in {
	padding: 0 40rpx;
	}
	.headline {
	padding-top: 25rpx;
	}
	
	.head-headline {
	font-size: 28rpx;
	font-weight: bold;
	}

	/* 内容部分 */
	.lately-main {
	margin-top: 20rpx;
	overflow: hidden; 
	/* background-color: cadetblue; */
	}
	.lately-main .chunk {
	display: inline-block;
	font-size: 24rpx;
	line-height: 20rpx;
	padding: 10rpx 21rpx;
	background: #f5f5f5;
	margin-right: 20rpx;
	border: 1px solid #DCDCDC;
	border-radius: 18.5rpx;
	color: #666666;
	margin-bottom: 26rpx;
	}