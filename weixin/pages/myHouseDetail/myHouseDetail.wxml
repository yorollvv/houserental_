            <text class="title">房源配置</text>
            <view class="allocation-info">
                <view wx:for="{{disopose}}" wx:key="index" class="allocation-info-view">
                    <image src="{{item.img}}" class="allocation-info-text"/>
                    <text class="allocation-info-text">{{item.text}}</text>
                </view>
            </view>
        </view> -->
        <!-- 分隔线 -->
        <!-- <view class="line"></view> -->
        <!-- 房源描述 -->
        <view class="describe">
            <text class="title">房源描述</text>
            <view class="content">{{house[0].hDetail}}</view>
        </view>
    </view>


  </view> 
</view>