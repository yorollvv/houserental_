/* 分隔线 */
.swiper-box,
.swiper{
    height: 250px;
    margin-top: 10px;
}
.swiper-box .banner{
    width: 700rpx;
    height: 100%;
}
.swiper-box .banner .slide-image{
  width: 100%;
}

/* 房源信息 */
.info{
  margin: 20rpx auto;
  width: 98%;
}
.info .title{
  font-size: 34rpx;
}
.info .rent-time,
.info .telphone{
  color: #686464;
  font-size: 30rpx;
  margin: 15rpx 0rpx;
}

.info .house-info{
  display: flex;
  margin-top: 5rpx;
  justify-content: space-around;
}
.info .house-info-view{
  margin: 0 auto;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}
.info .house-info-view .colorText{
  color: #126ce0;
  font-size: 32rpx;
}
.info .house-info-view .simple{
  color: #3c3c3c;
  font-size: 28rpx;
  margin: 0 auto;
}
.info .line{
  width: 100%;
  height: 2rpx;
  background-color: #c3c3c3;
  margin: 25rpx 0rpx;
}
/* 房源配置 */
.info .allocation{
  width: 100%;
  margin: 20rpx auto;
}
.info .allocation .title{
  font-size: 36rpx;
  font-weight: 600;
}
.info .allocation .allocation-info{
  width: 95%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin: 0 auto;
}
.info .allocation .allocation-info-view{
  width: 85rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  padding: 10rpx 20rpx;
  align-items: center;
}
.info .allocation .allocation-info-image{
  width: 60rpx;
  height: 60rpx;
}
.info .allocation .allocation-info-text{
  margin-top: 2rpx;
  font-size: 25rpx;
  color: #515151;
}

/* 房源描述 */
.info .describe{
  margin: 20rpx auto;
  width: 98%;
}
.info .describe .title{
  font-size: 34rpx;
  font-weight: 600;
}
.info .describe .content{
  width: 98%;
  margin: 20rpx auto;
  font-size: 28rpx;
}



.line{
  width: 100%;
  height: 2rpx;
  background-color: #c3c3c3;
  margin: 25rpx 0rpx;
}
/* 分隔块 */
.line-box{
  width: 100%;
  height: 50rpx;
  background-color: #ffffff;
  margin: 35rpx 0rpx;
}
/*收藏 签约 联系 */
.btn-list{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  
}
.btn-list .star-btn,
.btn-list .contact-btn,
.btn-list .sign-btn{
  position: fixed;
  bottom: 0;
  width: 33.33%; 
  font-size: 36rpx;
  color: #fff;
  padding: 20rpx;
  text-align: center;
}
.btn-list .contact-btn{
  background-color: #ff8785d7;
  right: 0;
 
}
.btn-list .sign-btn{
  background-color: #941412d7;
  right: 250rpx;
}
.btn-list .star-btn{
  background-color: #faaaa8d7;
  left: 1rpx;
}

