<!--pages/myHouse/myHouse.wxml-->
<view class="card" style="padding-top:10px;">
		<view class="card-items">
			<scroll-view scroll-y="true" style=" display: flex">
				<view wx:for="{{house}}" class="card-item" catchtap="onHouseDetail" wx:key="index" data-id="{{item.hID}}">
					<image src="{{item.hPic}}" />
					<view class="card-name" >{{item.hName}}</view>
					<view class="card-info"><span>{{item.hMode}} | {{item.hArea}}m² | {{item.hcity}}</span></view>
					<view class="card-price-m1"><span class="card-price-m1-text">{{item.hRent}}</span></view>
          <!-- 修改租金 -->
          <view class="update" catchtap="updatePrice" data-id="{{item.hID}}">
            <button class="btn1" plain="true" size="mini" style="font-size: smaller;" hover-class="button-hover" >修改租金</button> 
          </view>
				</view>
        
			</scroll-view>
		</view>
	</view>
